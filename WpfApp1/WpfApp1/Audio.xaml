<Window x:Class="WpfApp1.Audio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Audio" Height="202.6" Width="300" Closing="Window_Closing">
    <StackPanel Margin="10,10,10.2,-17">
        <Button Name="btnOpenAudioFile" Click="btnOpenAudioFile_Click" Margin="80 10">Open Audio file</Button>
        <Label Name ="Filename" Content="NIL" HorizontalAlignment="Center" Margin="5"/>
        <Label x:Name="lblStatus" Content="Not playing..." HorizontalContentAlignment="Center" Margin="5,5,5.2,5" />
        <WrapPanel HorizontalAlignment="Center">
            <Button Name="btnPlay" Click="btnPlay_Click">Play</Button>
            <Button Name="btnPause" Margin="5,0" Click="btnPause_Click">Pause</Button>
            <Button Name="btnStop" Click="btnStop_Click">Stop</Button>
        </WrapPanel>
    </StackPanel>
</Window>
