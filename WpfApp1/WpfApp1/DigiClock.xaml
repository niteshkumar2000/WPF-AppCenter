<Window x:Class="WpfApp1.DigiClock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DigiClock" Height="255.03" Width="300" Closing="Window_Closing" Background="#2f2f2f">
    <StackPanel>
        <Label Content="Timer : " FontSize="18" Foreground="white"/>
        <TextBox x:Name="txtcount" FontSize="15" Margin="20,0,178.2,0"/>
        <Button Content="Start" Margin="20,5,214.2,0" Click="Button_Click"/>
        <Label Content="Time : " FontSize="18" Foreground="white"/>
        <TextBlock Text="" FontSize="18" Name="digiclock" Foreground="white" HorizontalAlignment="Center"/>
        <Label Content="Date : " FontSize="18" Foreground="white"/>
        <TextBlock Text="" FontSize="18" Name="digidate" HorizontalAlignment="Center" Foreground="white"/>
    </StackPanel>
</Window>
